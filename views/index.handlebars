<h1>Eat Da Burger!!!!</h1>

<h2>Burgers Ordered</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <h4>{{id}}. {{burger_name}}</h4>
    <button class="change-eat" data-id="{{id}}">
        {{#if ate}}Eaten!{{else}}Devour{{/if}}
    </button>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Eaten</h2>

<li>
    {{#each burgers}}
    {{#if devoured}}
    <h4>{{id}}.{{burger_name}}</h4>
    {{/if}}
    {{/each}}

</li>

<h2>Order a Burger!</h2>

<form class="create-form">

    <div class="form-group">
        <label for="ca">Your Order:</label>
        <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Submit</button>
</form>

